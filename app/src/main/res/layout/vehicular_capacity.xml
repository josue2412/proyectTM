                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:id="@+id/rl_bike_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageButton
                                android:id="@+id/bikeCounterBtn"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/bike"
                                android:onClick="onClick"/>
                    </RelativeLayout>
                    <TextView
                            android:id="@+id/badge_bike_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/rl_bike_1"
                            android:background="@drawable/item_count"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:id="@+id/rl_bike_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageButton
                                android:id="@+id/bikeCounterBtn2"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/bike"
                                android:onClick="onClick"/>
                    </RelativeLayout>
                    <TextView
                            android:id="@+id/badge_bike_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/rl_bike_2"
                            android:background="@drawable/item_count"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="80dp"
                    android:gravity="center_horizontal">
                <EditText
                        android:id="@+id/mainMovementCounterEditText"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:paddingRight="10dp"/>
                <EditText
                        android:id="@+id/secondMovementCounterEditText"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:paddingRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <Button style="@style/Widget.AppCompat.Button.Colored"
                        android:id="@+id/interruptStudyBtn"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Interrumpir estudio"
                        android:onClick="interruptStudy"/>
                <Button style="@style/Widget.AppCompat.Button.Colored"
                        android:id="@+id/emergencyBtn"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Emergencia"
                        android:onClick="emergencyNotification"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>