                    <RelativeLayout
                            android:id="@+id/rl_motorcycle_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageButton
                                android:id="@+id/motorcycleCounterBtn"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/motorcycle"
                                android:onClick="onClick"/>
                    </RelativeLayout>
                    <TextView
                            android:id="@+id/badge_motorcycle_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/rl_motorcycle_1"
                            android:background="@drawable/item_count"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:id="@+id/rl_motorcycle_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageButton
                                android:id="@+id/motorcycleCounterBtn2"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/motorcycle"
                                android:onClick="onClick"/>
                    </RelativeLayout>
                    <TextView
                            android:id="@+id/badge_motorcycle_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/rl_motorcycle_2"
                            android:background="@drawable/item_count"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                <EditText
                        android:id="@+id/truckCounterEditText"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:paddingRight="10dp"/>
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:id="@+id/rl_truck_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageButton
                                android:id="@+id/truckCounterBtn"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/truck"
                                android:onClick="onClick"/>
                    </RelativeLayout>
                    <TextView
                            android:id="@+id/badge_truck_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/rl_truck_1"
                            android:background="@drawable/item_count"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:id="@+id/rl_truck_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageButton
                                android:id="@+id/truckCounterBtn2"
                                android:layout_width="80dp"
