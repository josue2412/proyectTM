<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logged_capturist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_color">

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btnAscDescPassengers"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:onClick="onClick"
                android:layout_below="@id/stopTypeLinearLayout"
                android:text="Ascenso y descenso de pasajeros" />

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btnVisualOccupation"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_height="160dp"
                android:layout_below="@id/stopTypeLinearLayout"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:text="Ocupación visual de pasajeros" />

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btnVehicularCap"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_height="160dp"
                android:layout_below="@id/btnAscDescPassengers"
                android:layout_alignParentLeft="true"
                android:onClick="onClick"
                android:text="Ocupación vehicular" />

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/btnOriginDestinyStudy"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_height="160dp"
                android:layout_below="@id/btnVisualOccupation"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:text="Encuesta origen-destino" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>