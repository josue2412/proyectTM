                <EditText
                        android:id="@+id/movementCounterEditText1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:enabled="false"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <Button style="@style/Widget.AppCompat.Button.Colored"
                        android:id="@+id/interruptStudyBtn"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Interrumpir estudio"
                        android:onClick="interruptStudy"/>
                <Button style="@style/Widget.AppCompat.Button.Colored"
                        android:id="@+id/emergencyBtn"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Emergencia"
                        android:onClick="emergencyNotification"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>