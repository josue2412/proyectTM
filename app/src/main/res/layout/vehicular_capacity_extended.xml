                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bus"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/busCounterBtn2"
                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bus"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/busCounterBtn1"
                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bus"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/motorcycleCounterEditText"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:paddingRight="10dp"/>
            <ImageButton
                android:id="@+id/motorcycleCounterBtn4"
                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/motorcycle"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/motorcycleCounterBtn3"
                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/motorcycle"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/motorcycleCounterBtn2"
                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/motorcycle"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/motorcycleCounterBtn1"
                android:layout_width="60dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/motorcycle"
                android:onClick="onClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/truckCounterEditText"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:enabled="false"
                android:gravity="center_horizontal"
