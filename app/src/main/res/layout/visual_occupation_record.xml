<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:showDividers="middle"
    android:divider="@drawable/border_gray"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/route_edit_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:hint="Ruta"
            android:inputType="textVisiblePassword" />

        <Spinner style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:id="@+id/type_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:entries="@array/types"
            android:gravity="right" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_save"
            android:onClick="onSave" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/econNum_edit_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:hint="No Economico"
            android:inputType="textAutoComplete" />
        <EditText
            android:id="@+id/vehicle_type_edit_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:hint="Vehiculo"
            android:inputType="textAutoComplete" />
    </LinearLayout>
</LinearLayout>